<p>Send Message</p>

<%= form_tag(:action => 'send_message')%>



<div class="form-group">

  <%= label_tag(:from, "from") %>
  <%= text_field_tag :from  %>
</div>

<div class="form-group">
  <%= label_tag(:to, "Recipient") %>
  <%= text_field_tag :to , value: "" %>
</div>


<div class="form-group">
  <%= label_tag(:msg, "Message") %>
  <%= text_area_tag :msg, "", class: "form-control" %>
</div>

<%= submit_tag("Send", :class => "btn btn-primary") %>